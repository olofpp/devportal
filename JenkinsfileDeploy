    
    def remote = [:]
    remote.name = 'HOST'
    remote.host = '10.67.107.24'
    
    node {
        
    withCredentials([usernamePassword(credentialsId: 'wso2admin', passwordVariable: 'passWord', usernameVariable: 'userName')]) {
    
    
    remote.user = userName
    remote.password = passWord
    remote.allowAnyHosts = true
    stage('Remote SSH') {
        sshCommand remote: remote, command: "docker stack rm ${APPNAME}"
        sshCommand remote: remote, command: "('export APPNAME=${APPNAME} PFXPWD=${PFXPWD} IMAGE=${IMAGE} PFX=${PFX}'); docker stack deploy -c ${PATH}${APPNAME}.yml ${APPNAME}"
    }
}
}
